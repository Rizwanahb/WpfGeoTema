                    <ColumnDefinition Width="41*"/>
                    <ColumnDefinition Width="111*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Land " FontSize="14" Grid.ColumnSpan="2" />
                <TextBox Grid.Column="3" Name="txtLandNavn" Text="{Binding ElementName=Geodatalist, Path=SelectedItem.Land_Navn, Mode=OneWay}" Grid.ColumnSpan="2"/>

                <TextBlock Text="Verdensdel" Grid.Row="1" FontSize="14" Grid.ColumnSpan="3"/>
                <TextBox Grid.Row="1" Grid.Column="3" Name="txtVerdensdelNavn" Text="{Binding ElementName = Geodatalist, Path=SelectedItem.Verdensdel_Navn, Mode=OneWay}" Grid.ColumnSpan="2"/>


                <TextBlock Grid.Row="2" Text="Rang" FontSize="14" Grid.ColumnSpan="2"/>
                <TextBox Grid.Row="2" Grid.Column="3" Name="txtRang" Text="{Binding ElementName=GeografikList, Path=SelectedItem.Rang, Mode=OneWay}" Grid.ColumnSpan="2"/>

                <TextBlock Grid.Row="3" Text="Fødselsrate" FontSize="14" Grid.ColumnSpan="2"/>
                <TextBox Grid.Row="3" Grid.Column="3" Name="txtFødselsrate" Text="{Binding ElementName=Geodatalist, Path=SelectedItem.Data, Mode=OneWay}" Grid.ColumnSpan="2"/>

                <Button Content="Create"  Grid.Row="4"  Click="Create_Click" Margin="0,21,3,2" Grid.RowSpan="2" />
                <Button Content="Update" Grid.Column="1" Grid.Row="4" Click="Update_Click" Margin="25,21,96,1" Grid.ColumnSpan="4" Grid.RowSpan="2"/>
                <Button Content="Delete" Grid.Column="4" Grid.Row="4" Click="Delete_Click" Margin="25,21,3,1" Grid.RowSpan="2"/>

            </Grid>

        </Grid>


