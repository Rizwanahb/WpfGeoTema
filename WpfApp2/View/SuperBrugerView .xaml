        <DataGrid x:Name="dataGrid_Vis" x:FieldModifier="public" AutoGenerateColumns="False" ColumnWidth="*" Grid.ColumnSpan="3" Margin="-2,-54,2,0" Height="387" VerticalAlignment="Top">
